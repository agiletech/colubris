.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    .atk-box-small(class="{$pannel_class}") {$quick_search}
        .atk-actions {$grid_buttons}
    {Pannel}

    table
        {header}
        thead
            {cols}{col}
            th
                {$descr} {$sort}
            {/}{/}
        {/}
        {$subheader}

        tbody
            {rows}{row}
            tr(class="{$odd_even}" data-id="{$row_id}")
                {cols}{col}
                <td {$tdparam}>
                {$content}
                </td>
                {/}{/}
            {/}{/}

            {totals}
            tr(class="totals")
                {cols}{col}
                <td {$tdparam}>
                {$content}
                </td>
                {/}{/}
            {/}
    {not_found}{$not_found_message}{/}
    {$paginator}